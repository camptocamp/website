<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <template id="alternate_languages" name="CMS alternate languages">
    <t t-if="request and request.website_multilang and website">
      <t t-foreach="website.get_alternate_languages(request.httprequest, main_object=main_object)" t-as="lg">
        <link rel="alternate" t-att-hreflang="lg['hreflang']" t-att-href="lg['href']"/>
      </t>
    </t>
  </template>

  <template id="review_message" name="Translation review message">
    <t t-if="request and request.website_multilang and website and main_object">
      <t t-if="website.translation_needs_review(main_object)">
        <div class="aler alert-warning" role="alert">
          TODO
        </div>
      </t>
    </t>
  </template>

</odoo>
