<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hr_expense_form_view_readonly" model="ir.ui.view">
        <field name="name">hr.expense.form.readonly</field>
        <field name="model">hr.expense</field>
        <field name="inherit_id" ref="hr_expense.hr_expense_form_view"/>
        <field name="priority" eval="25"/>
        <field name="arch" type="xml">
            <field name="account_id" position="attributes">
                <attribute name="attrs">{'readonly':True}</attribute>
            </field>
            <field name="employee_id" position="attributes">
                <attribute name="attrs">{'readonly':True}</attribute>
            </field>
            <field name="payment_mode" position="attributes">
                <attribute name="attrs">{'readonly':True}</attribute>
            </field>
        </field>
    </record>

    <record id="hr_expense_form_view_edit" model="ir.ui.view">
        <field name="name">hr.expense.form.edit</field>
        <field name="model">hr.expense</field>
        <field name="inherit_id" ref="hr_expense_form_view_readonly"/>
        <field name="priority" eval="25"/>
        <field name="groups_id" eval="(6,0,[ref('account.group_account_user'),ref('account.group_account_manager')])"/>
        <field name="arch" type="xml">
            <field name="account_id" position="attributes">
                <attribute name="attrs">{'readonly':False}</attribute>
            </field>
            <field name="employee_id" position="attributes">
                <attribute name="attrs">{'readonly':False}</attribute>
            </field>
            <field name="payment_mode" position="attributes">
                <attribute name="attrs">{'readonly':False}</attribute>
            </field>
        </field>
    </record>
</odoo>