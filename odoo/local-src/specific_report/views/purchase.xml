<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template
      id="report_purchaseorder_document"
      inherit_id="purchase_discount.report_purchaseorder_document">

      <xpath expr="//div[@class='row']" position="before">
        <style type="text/css">
          body {
                font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
                font-size: 50px;
                color: #000 !important;
                word-wrap: break-word;
              }
              .border-black td {
                border-top: 1px solid black !important;
              }
              .table-condensed > thead > tr > th {
                border-bottom: 1px solid black !important;
              }
              .table-condensed > tbody > tr {
                page-break-inside: avoid !important;
              }
              .zero_min_height {
                min-height: 0px !important;
              }
              body {
              font-family: "DejaVu Sans";
              font-size: 12px;
              }
              address.mb0 {
              font-size: 12px;
              }
              h2 {
              font-size: 16px;
              padding-top: 65mm;
              }
              h3 {
              font-size: 13px;
              }
              div.address-row {
              position: absolute;
              width: 100%;
              height: 50mm;
              top: 10mm;
              }
              div.left-address {
              position: absolute;
              }
              div.envelope-window {
              position: absolute;
              left: 130mm;
              }
              div.fillin-block {
              border-top: 1px solid #ddd;
              }
              div.fillin-header {
              padding-left: 0pt;
              }
              div.fillin-space {
              border-bottom: 1px solid #ddd;
              }
              div.fillin-separator {
              padding-top: 5mm;
              }
              div.fillin-disclaimer {
              padding-top: 10mm;
              }
              span.picking-barcode {
              float: right;
              }
              div.barcode-spacer {
              height: 10mm;
              }
        </style>
      </xpath>

      <xpath expr="//div[@t-field='o.dest_address_id']" position="attributes">
        <!-- hide phone numbers -->
        <attribute name="t-options">
          {"widget": "contact", "fields": ["address", "name"], "no_marker": true}
        </attribute>
      </xpath>

      <xpath expr="//div[@t-field='o.picking_type_id.warehouse_id.partner_id']" position="attributes">
        <!-- hide phone numbers -->
        <attribute name="t-options">
          {"widget": "contact", "fields": ["address"], "no_marker": true}
        </attribute>
      </xpath>

      <xpath expr="//div[@t-field='o.partner_id']" position="attributes">
        <!-- hide phone numbers -->
        <attribute name="t-options">
          {"widget": "contact", "fields": ["address", "name"], "no_marker": true}
        </attribute>
      </xpath>

      <xpath
        expr="//table[@class='table table-condensed']/thead/tr/th[1]"
        position="before">
        <th>Pos</th>
      </xpath>

      <xpath expr="//span[@t-field='line.name']/.." position="before">
        <td>
          <span t-esc="line_index + 1"/>
        </td>
      </xpath>

      <xpath expr="//span[@t-field='line.date_planned']" position="attributes">
        <attribute name="t-field-options">{"widget": "date"}</attribute>
      </xpath>

      <xpath expr="//p[@t-field='o.date_order']" position="attributes">
        <attribute name="t-field-options">{"widget": "date"}</attribute>
      </xpath>

      <xpath expr="//div[@class='col-xs-6']//strong" position="replace">
        <strong>Shipping address</strong>
      </xpath>

      <xpath expr="//div[@t-if='o.name']//strong" position="replace">
        <strong>Our Order Reference</strong>
      </xpath>

      <xpath expr="//div[@t-if='o.date_order']//strong" position="replace">
        <strong>Order Date</strong>
      </xpath>

      <xpath expr="//div[@class='page']/h2[1]" position="replace">
        <h2 t-if="o.state != 'draft'">Purchase Order <span t-field="o.name"/></h2>
      </xpath>
      <xpath expr="//div[@class='page']/h2[2]" position="replace">
        <h2 t-if="o.state == 'draft'">Request for Quotation <span t-field="o.name"/></h2>
      </xpath>

      <xpath expr="//p[@t-field='o.notes']" position="after">
        <div class="row mb32 ">
          <div class="col-xs-12 fillin-block"><strong>Order</strong></div>
          <div class="col-xs-6">
            <div class="col-xs-5 fillin-header fillin-separator">Place</div>
            <div class="col-xs-7 fillin-space fillin-separator"> <span>&amp;nbsp;</span> </div>
            <div class="col-xs-5 fillin-header fillin-separator">Name(s)</div>
            <div class="col-xs-7 fillin-space fillin-separator"> <span>&amp;nbsp;</span> </div>
          </div>
          <div class="col-xs-6">
            <div class="col-xs-5 fillin-header fillin-separator">Date</div>
            <div class="col-xs-7 fillin-space fillin-separator"> <span>&amp;nbsp;</span> </div>
            <div class="col-xs-5 fillin-header fillin-separator">Signature(s)</div>
            <div class="col-xs-7 fillin-space fillin-separator"> <span>&amp;nbsp;</span> </div>
          </div>
          <div class="col-xs-12 fillin-disclaimer">Please send the order confirmation as PDF by e-mail to logistics@smartliberty.ch</div>
        </div>
      </xpath>

      <xpath expr="//div[@t-field='o.partner_id']/../.." position="attributes">
        <attribute name="class">address-row</attribute>
      </xpath>

      <xpath expr="//div[@t-field='o.dest_address_id']/../.." position="attributes">
        <attribute name="class">left-address</attribute>
      </xpath>

      <xpath expr="//div[@t-field='o.partner_id']/.." position="attributes">
        <attribute name="class">envelope-window</attribute>
      </xpath>

    </template>

</odoo>
