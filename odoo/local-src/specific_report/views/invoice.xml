<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template
      id="report_invoice_document"
      inherit_id="account_payment_partner.report_invoice_payment_mode">

      <xpath expr="//div[@class='row']" position="before">
        <style type="text/css">
          body {
                font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
                font-size: 50px;
                color: #000 !important;
                word-wrap: break-word;
              }
              .border-black td {
                border-top: 1px solid black !important;
              }
              .table-condensed > thead > tr > th {
                border-bottom: 1px solid black !important;
              }
              .table-condensed > tbody > tr {
                page-break-inside: avoid !important;
              }
              .zero_min_height {
                min-height: 0px !important;
              }
              body {
              font-family: "DejaVu Sans";
              font-size: 12px;
              }
              address.mb0 {
              font-size: 12px;
              }
              h2 {
              font-size: 16px;
              padding-top: 65mm;
              }
              h3 {
              font-size: 13px;
              }
              div.address-row {
              position: absolute;
              width: 100%;
              height: 50mm;
              top: 10mm;
              }
              div.left-address {
              position: absolute;
              }
              div.envelope-window {
              position: absolute;
              left: 130mm;
              }
              div.fillin-block {
              border-top: 1px solid #ddd;
              }
              div.fillin-header {
              padding-left: 0pt;
              }
              div.fillin-space {
              border-bottom: 1px solid #ddd;
              }
              div.fillin-separator {
              padding-top: 5mm;
              }
              div.fillin-disclaimer {
              padding-top: 10mm;
              }
              span.picking-barcode {
              float: right;
              }
              div.barcode-spacer {
              height: 10mm;
              }
        </style>
      </xpath>

      <!-- Replace adresses -->
      <xpath expr="//div[@class='page']/div[@class='row'][1]" position="replace">
        <div class="row address-row">
            <div class="col-xs-5 col-xs-offset-1 envelope-window">
                <div t-field="o.partner_id"
                    t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'
                    />
            </div>
        </div>
      </xpath>

      <xpath expr="//t[@groups='sale.group_sale_layout']/table/thead" position="replace">
        <thead>
          <tr>
            <th>Pos</th>
              <th>Description</th>
              <th class="text-right">Quantity</th>
              <th class="text-right">Unit price</th>
              <th t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">Discount (%)</th>
              <th class="text-right">Taxes</th>
              <th class="text-right price_tax_included">Price</th>
          </tr>
        </thead>
      </xpath>

      <!-- Line position in layouted reports -->
      <xpath expr="//t[@t-as='l']/tr/td[1]" position="before">
        <td>
          <span t-esc="l_index + 1"/>
        </td>
      </xpath>

      <xpath expr="//p[@t-field='o.name']/.." position="attributes">
        <attribute name="class">col-xs-3</attribute>
      </xpath>

      <xpath expr="//p[@t-field='o.date_invoice']/.." position="attributes">
        <attribute name="class">col-xs-3</attribute>
      </xpath>

      <xpath expr="//p[@t-field='o.origin']/.." position="attributes">
        <attribute name="class">col-xs-3</attribute>
      </xpath>

      <xpath expr="//p[@t-field='o.partner_id.ref']/.." position="attributes">
        <attribute name="class">col-xs-3</attribute>
      </xpath>

      <xpath expr="//p[@t-field='o.reference']/.." position="attributes">
        <attribute name="class">col-xs-3</attribute>
      </xpath>

      <xpath expr="//p[@t-if='o.comment']" position="replace">
            <p t-if="o.comment">
                <strong>Comment</strong>
                <span t-field="o.comment"/>
            </p>
      </xpath>

      <xpath expr="//p[@t-if='o.payment_term_id']" position="replace">
      </xpath>



      <xpath expr="//p[@t-if='o.partner_bank_id']" position="replace">
      </xpath>

      <!-- End document informations -->
      <xpath expr="//p[@t-if='o.fiscal_position_id.note']" position="after">
        <div class="row mb32 ">
          <div class="col-xs-12 fillin-block"><strong>Payment information</strong></div>
          <div class="col-xs-3">
            <div class="fillin-separator">Bank</div>
            <div class="fillin-separator">BIC/SWIFT</div>
            <div class="fillin-separator">IBAN</div>
          </div>
          <div class="col-xs-9">
            <t t-if="o.partner_bank_id">
              <div class="fillin-separator">
                <t t-if="o.partner_bank_id.bank_id">
                  <span t-field="o.partner_bank_id.bank_id.name"/>&amp;nbsp;<span t-field="o.partner_bank_id.bank_id.street"/>&amp;nbsp;<span t-field="o.partner_bank_id.bank_id.zip"/>&amp;nbsp;<span t-field="o.partner_bank_id.bank_id.city"/>
                </t>
              </div>
              <div class="fillin-separator">
                <t t-if="o.partner_bank_id.bank_id">
                  <span t-field="o.partner_bank_id.bank_id.bic"/>
                </t>
              </div>
              <div class="fillin-separator">
                <t t-if="o.partner_bank_id.bank_id">
                  <span t-field="o.partner_bank_id.acc_number"/>
                </t>
              </div>
            </t>
          </div>
          <div class="col-xs-12 fillin-disclaimer">For any questions, please contact accounting@smartliberty.ch</div>
        </div>
      </xpath>

      <!-- Informations in beginning of document -->
      <xpath expr="//div[@t-if='o.name']/.." position="replace">
        <div class="row mt32 mb32">
          <div class="col-xs-2" t-if="o.name">
              <strong>Description</strong>
              <p t-field="o.name"/>
          </div>
          <div class="col-xs-2" t-if="o.date_invoice">
              <strong>Invoice Date</strong>
              <p t-field="o.date_invoice"/>
          </div>
          <div class="col-xs-2" t-if="o.date_due and o.type == 'out_invoice' and (o.state == 'open' or o.state == 'paid')">
              <strong>Due Date</strong>
              <p t-field="o.date_due"/>
          </div>
          <div class="col-xs-2" t-if="o.origin">
              <strong>Source</strong>
              <p t-field="o.origin"/>
          </div>

          <div name="reference" class="col-xs-2" t-if="o.reference and o.type == 'in_invoice'">
              <strong>Reference</strong>
              <p t-field="o.reference"/>
          </div>
        </div>
      </xpath>

      <!-- Label at end of section -->
      <xpath expr="//t[@t-set='subtotal']/../strong" position="replace">
        <strong>Subtotal </strong>
      </xpath>

      <!-- Total at end of document -->


    </template>

    <!-- Remove template content that adds unusefull adresses in invoices
         The client wants only the invoice address -->
    <template id="report_invoice_document_inherit_sale"
              inherit_id="sale.report_invoice_document_inherit_sale">
    </template>

</odoo>
