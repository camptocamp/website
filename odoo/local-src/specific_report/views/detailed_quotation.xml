<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template id="report_sale_layouted"
      inherit_id="sale.report_saleorder_document">

      <xpath expr="//div[@class='row']" position="before">
        <style type="text/css">
          body {
                font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
                font-size: 50px;
                color: #000 !important;
                word-wrap: break-word;
              }
              .border-black td {
                border-top: 1px solid black !important;
              }
              .table-condensed > thead > tr > th {
                border-bottom: 1px solid black !important;
              }
              .table-condensed > tbody > tr {
                page-break-inside: avoid !important;
              }
              .zero_min_height {
                min-height: 0px !important;
              }
              body {
              font-family: "DejaVu Sans";
              font-size: 12px;
              }
              address.mb0 {
              font-size: 12px;
              }
              h2 {
              font-size: 16px;
              padding-top: 65mm;
              }
              h3 {
              font-size: 13px;
              }
              div.address-row {
              position: absolute;
              width: 100%;
              height: 50mm;
              top: 10mm;
              }
              div.left-address {
              position: absolute;
              }
              div.envelope-window {
              position: absolute;
              left: 130mm;
              }
              div.fillin-block {
              border-top: 1px solid #ddd;
              }
              div.fillin-header {
              padding-left: 0pt;
              }
              div.fillin-space {
              border-bottom: 1px solid #ddd;
              }
              div.fillin-separator {
              padding-top: 5mm;
              }
              div.fillin-disclaimer {
              padding-top: 10mm;
              }
              span.picking-barcode {
              float: right;
              }
              div.barcode-spacer {
              height: 10mm;
              }
        </style>
      </xpath>

    <!-- Replace adresses -->
      <xpath expr="//div[@class='page']/div[@class='row'][1]" position="replace">
        <div class="row address-row">
            <div class="col-xs-6 left-address">
                <strong t-if="doc.partner_shipping_id == doc.partner_invoice_id">Invoicing and shipping address</strong>
                <strong t-if="doc.partner_shipping_id != doc.partner_invoice_id">Invoicing address</strong>
                <div t-field="doc.partner_invoice_id"
                    t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True, "phone_icons": True}'
                    />
                <div t-if="doc.partner_shipping_id != doc.partner_invoice_id" class="mt8">
                    <strong>Shipping address</strong>
                    <div t-field="doc.partner_shipping_id"
                        t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True, "phone_icons": True}'/>
                </div>
            </div>
            <div class="col-xs-5 col-xs-offset-1 envelope-window">
                <div t-field="doc.partner_id"
                    t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'
                    />
            </div>
        </div>
      </xpath>

      <xpath expr="//p[@t-if='doc.payment_term_id.note']" position="replace"/>

      <xpath expr="//table[@class='table table-condensed']/thead/tr/th[1]" position="before">
        <th>Pos</th>
      </xpath>

      <xpath expr="//div[@class='page']/h2" position="replace">
        <h2>
          <span t-if="doc.state not in ['draft','sent']">Order </span>
          <span t-if="doc.state in ['draft','sent']">Quotation </span>
          <span t-field="doc.name"/>
        </h2>
      </xpath>

      <xpath expr="//div[@id='informations']/div[@t-if='doc.client_order_ref']/strong" position="replace">
        <strong>Your Reference</strong>
      </xpath>

      <xpath expr="//div[@id='informations']/div[@t-if='doc.date_order']" position="replace">
        <div t-if="doc.date_order" class="col-xs-3">
          <strong t-if="doc.state not in ['draft','sent']">Date Ordered</strong>
          <strong t-if="doc.state in ['draft','sent']">Quotation Date</strong>
          <p t-field="doc.date_order"/>
        </div>
      </xpath>

      <xpath expr="//div[@id='informations']/div[@t-if='doc.user_id.name']/strong" position="replace">
        <strong>Salesperson</strong>
      </xpath>

      <xpath expr="//span[@t-field='l.name']/.." position="before">
        <td>
          <span t-esc="l_index + 1"/>
        </td>
      </xpath>

      <xpath expr="//p[@t-field='doc.date_order']" position="attributes">
        <attribute name="t-field-options">{"widget": "date"}</attribute>
      </xpath>

      <xpath expr="//p[@t-field='doc.note']" position="after">

        <div class="row mb32 ">
          <div class="col-xs-12 fillin-block"><strong>Order</strong></div>
          <div class="col-xs-6">
            <div class="col-xs-4 fillin-header fillin-separator">Location</div>
            <div class="col-xs-8 fillin-space fillin-separator"> <span>&amp;nbsp;</span> </div>
            <div class="col-xs-4 fillin-header fillin-separator">Name(s)</div>
            <div class="col-xs-8 fillin-space fillin-separator"> <span>&amp;nbsp;</span> </div>
          </div>
          <div class="col-xs-6">
            <div class="col-xs-4 fillin-header fillin-separator">Date</div>
            <div class="col-xs-8 fillin-space fillin-separator"> <span>&amp;nbsp;</span> </div>
            <div class="col-xs-4 fillin-header fillin-separator">Signature(s)</div>
            <div class="col-xs-8 fillin-space fillin-separator"> <span>&amp;nbsp;</span> </div>
          </div>
          <div class="col-xs-12 fillin-disclaimer">Please return with date and signature my mail, or scan to PDF and email to orders@smartliberty.ch</div>
        </div>

      </xpath>

      <xpath expr="//span[@t-field='l.name']" position="attributes">
        <attribute name="t-field">l.product_code_description</attribute>
      </xpath>

    </template>

</odoo>
