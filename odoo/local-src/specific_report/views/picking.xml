<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <template
    id="report_picking"
    inherit_id="delivery.report_shipping2">

      <xpath expr="//div[@class='row']" position="before">
        <style type="text/css">
          body {
                font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
                font-size: 50px;
                color: #000 !important;
                word-wrap: break-word;
              }
              .border-black td {
                border-top: 1px solid black !important;
              }
              .table-condensed > thead > tr > th {
                border-bottom: 1px solid black !important;
              }
              .table-condensed > tbody > tr {
                page-break-inside: avoid !important;
              }
              .zero_min_height {
                min-height: 0px !important;
              }
              body {
              font-family: "DejaVu Sans";
              font-size: 12px;
              }
              address.mb0 {
              font-size: 12px;
              }
              h1 {
              font-size: 16px;
              padding-top: 65mm;
              }
              h2 {
              font-size: 16px;
              padding-top: 65mm;
              }
              h3 {
              font-size: 13px;
              }
              div.address-row {
              position: absolute;
              width: 100%;
              height: 50mm;
              top: 10mm;
              }
              div.left-address {
              position: absolute;
              }
              div.envelope-window {
              position: absolute;
              left: 130mm;
              }
              div.fillin-block {
              border-top: 1px solid #ddd;
              }
              div.fillin-header {
              padding-left: 0pt;
              }
              div.fillin-space {
              border-bottom: 1px solid #ddd;
              }
              div.fillin-separator {
              padding-top: 5mm;
              }
              div.fillin-disclaimer {
              padding-top: 10mm;
              }
              span.picking-barcode {
              float: right;
              }
              div.barcode-spacer {
              height: 10mm;
              }
        </style>
      </xpath>

      <xpath expr="//div[@class='col-xs-5 col-xs-offset-1']" position="replace">
          <div class="row address-row">
            <div class="col-xs-5 col-xs-offset-1 envelope-window">
                <div t-if="o.partner_id" name="partner_header">
                    <div t-field="o.partner_id"
                       t-options='{"widget": "contact", "fields": ["address", "name"], "no_marker": True}'/>
                </div>
            </div>
          </div>
      </xpath>
      <xpath expr="//table[@class='table table-condensed']" position="replace">
             <div class="row mt32 mb32">
                <div class="col-xs-3" t-if="o.origin">
                    <strong>Order (Origin)</strong>
                    <p t-field="o.origin"/>
                </div>
                <div class="col-xs-3" t-if="o.date_done">
                    <strong>Scheduled Date</strong>
                    <p t-field="o.date_done" t-field-options='{"widget": "date"}'/>
                </div>
                <div class="col-xs-3" t-if="o.sale_id.project_id">
                    <strong>Project</strong>
                    <p t-field="o.sale_id.project_id.name"/>
                </div>
                <div class="col-xs-3" t-if="o.sale_id.client_order_ref">
                    <strong>Customer Reference</strong>
                    <p t-field="o.sale_id.client_order_ref"/>
                </div>
            </div>
      </xpath>

      <xpath
        expr="//table[@t-if='o.pack_operation_ids']/thead/tr/th[1]"
        position="before">
        <th>Pos</th>
      </xpath>

      <xpath expr="//span[@t-field='pack_operation.product_id']/.." position="before">
        <td>
          <span t-esc="pack_operation_index + 1"/>
        </td>
      </xpath>

      <xpath expr="//span[@t-field='pack_operation.product_id']" position="attributes">
        <attribute name="t-field">pack_operation.with_context(display_default_code=False).product_id</attribute>
      </xpath>

      <xpath expr="//table[@t-if='o.pack_operation_ids']" position="after">
        <div class="row mb32 ">
          <div class="col-xs-12 fillin-block"><strong>Confirmation of delivery</strong></div>
          <div class="col-xs-6">
            <div class="col-xs-5 fillin-header fillin-separator">Location</div>
            <div class="col-xs-7 fillin-space fillin-separator"> <span>&amp;nbsp;</span> </div>
            <div class="col-xs-5 fillin-header fillin-separator">Name(s)</div>
            <div class="col-xs-7 fillin-space fillin-separator"> <span>&amp;nbsp;</span> </div>
          </div>
          <div class="col-xs-6">
            <div class="col-xs-5 fillin-header fillin-separator">Date</div>
            <div class="col-xs-7 fillin-space fillin-separator"> <span>&amp;nbsp;</span> </div>
            <div class="col-xs-5 fillin-header fillin-separator">Signature(s)</div>
            <div class="col-xs-7 fillin-space fillin-separator"> <span>&amp;nbsp;</span> </div>
          </div>
          <div class="col-xs-12 fillin-disclaimer">With his signature, the customer confirms that all products listed in this document have been delivered. Please notify immediately any problems to logistics@smartliberty.ch.</div>
        </div>
      </xpath>

      <xpath expr="//div[@name='partner_header']/../.." position="attributes">
        <attribute name="class">address-row</attribute>
      </xpath>

      <xpath expr="//div[@name='partner_header']/.." position="attributes">
        <attribute name="class">envelope-window</attribute>
      </xpath>

      <xpath expr="//div[@t-field='o.move_lines[0].partner_id']/../.." position="attributes">
        <attribute name="class">left-address</attribute>
      </xpath>

      <xpath expr="//h1[@t-field='o.name']" position="replace">
        <div class="barcode-spacer"/>
      <h1>
                <span>Delivery note</span>
                <span t-field="o.name"/>
      </h1>
        <span class="picking-barcode">
          <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.name, 600, 100)" style="width:300px;height:50px;"/>
        </span>
      </xpath>

    </template>

    <template id="report_picking_report">
        <t t-call="report.html_container">
            <t t-foreach="docs" t-as="o">
                <t t-call="stock.report_picking" t-lang="o.partner_id.lang"/>
            </t>
        </t>
    </template>

    <template id="external_layout_header_barcode_right_hide" inherit_id="stock.external_layout_header_barcode_right">
      <xpath expr="//div[@name='right_box']" position="replace">
        <div class="col-xs-4 pull-right mt8 hide" name="right_box">
          <img t-att-src="'/report/barcode/?type=%s&amp;value=%s&amp;width=%s&amp;height=%s' % ('Code128', o.name, 600, 100)" style="width:300px;height:50px;"/>
        </div>
      </xpath>
    </template>


</odoo>
